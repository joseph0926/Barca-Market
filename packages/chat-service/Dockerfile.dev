FROM node:21-alpine3.18

WORKDIR /app

# Copying necessary files for the build
COPY package.json ./
COPY tsconfig.json ./
COPY src ./src

# Copying the chat-service package
COPY packages/chat-service/package.json ./packages/chat-service/
COPY packages/chat-service ./packages/chat-service

# Install global and local dependencies
RUN npm install -g nodemon ts-node typescript npm@latest
RUN npm install

# Expose the port that the app runs on
EXPOSE 4005

# Command to run the application in development mode
CMD ["npm", "run", "dev"]
