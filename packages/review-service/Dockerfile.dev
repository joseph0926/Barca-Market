FROM node:21-alpine3.18

WORKDIR /app

# Copying necessary files for the build
COPY package.json ./
COPY tsconfig.json ./
COPY src ./src

# Copying the review-service package
COPY packages/review-service/package.json ./packages/review-service/
COPY packages/review-service ./packages/review-service

# Install global and local dependencies
RUN npm install -g nodemon ts-node typescript npm@latest
RUN npx prisma generate
RUN npm install

# Expose the port that the app runs on
EXPOSE 4007

# Command to run the application in development mode
CMD ["npm", "run", "dev"]
